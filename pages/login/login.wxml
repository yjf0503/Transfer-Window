<view class="box">
  <view class="top">
      <text class='login'>{{register}}</text>
      <!-- <text class='register' bindtap='tab'>去{{login}}</text> -->
  </view>

  <view class="item middle" style="border:{{red}};">
      <view class='phone-box'>
          <input type='text' bindblur='phoneBlur' placeholder='请输入您的手机号' maxlength='11'/>
      </view>
     
  </view>
  <view class="item middle-box">
     <view class='code-box'>
          <view class='code-lf'>
             <input type='text' bindblur='codeBlur' placeholder='请输入收到的验证码' maxlength='6'/>
          </view>
          <view class="code-rt" bindtap='code'>{{code}}</view>
      </view> 
  </view>

  <view class='footer'>
    <button bindtap='submit'>{{register}}</button>
    <view>
      {{register}}体育圈招聘代表已同意
      <text>《体育圈招聘协议》</text>
    </view>
    
  </view>

</view>
